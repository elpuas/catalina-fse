{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
    "version":2,
	"settings": {
		"border": {
			"color": false,
			"radius": false,
			"style": false,
			"width": false
		},
		"color": {
			"background": true,
			"custom": false,
			"customDuotone": true,
			"customGradient": true,
			"defaultGradients": false,
			"defaultPalette": false,
			"duotone": [
				{
					"colors": [
						"#D8FF00",
						"#5E6F00"
					],
					"slug": "primary-and-secondary",
					"name": "Primary and Secondary"
				},
				{
					"colors": [
						"#5E6F00",
						"#D8FF00"
					],
					"slug": "secondary-and-primary",
					"name": "Secondary and Primary"
				}
			],
			"gradients": [
				{
					"gradient": "linear-gradient(45deg,rgb(216,255,0) 0%,rgb(94,111,0) 100%)",
					"slug": "catalina",
					"name": "Catalina"
				},
				{
					"gradient": "linear-gradient(45deg,rgb(216,255,0) 0%,rgb(182,214,0) 100%)",
					"slug": "mia",
					"name": "Mia"
				},
				{
					"gradient": "linear-gradient(45deg,rgb(182,214,0) 0%,rgb(94,111,0) 100%)",
					"slug": "filippo",
					"name": "Filippo"
				}
			],
			"link": false,
			"palette": [
				{
					"color": "#D8FF00",
					"slug": "primary",
					"name": "Primary"
				},
				{
					"color": "#5E6F00",
					"slug": "secondary",
					"name": "Secondary"
				},
				{
					"color": "#B6D600",
					"slug": "tertiary",
					"name": "Tertiary"
				},
				{
					"color": "#FFF",
					"slug": "white",
					"name": "White"
				},
				{
					"color": "#333333",
					"slug": "black",
					"name": "Black"
				}
			],
			"text": true
		},
		"layout": {
			"contentSize": "952px",
			"wideSize": "1152px"
		},
		"spacing": {
			"blockGap": true,
			"margin": true,
			"padding": true,
			"units": [
				"px",
				"rem"
			]
		},
		"typography": {
			"customFontSize": true,
			"dropCap": false,
			"fontFamilies": [
				{
					"fontFamily": "Inter",
					"slug": "inter",
					"name": "Inter"
				},
				{
					"fontFamily": "Inter Bold",
					"slug": "inter-bold",
					"name": "Inter Bold"
				},
				{
					"fontFamily": "Inter Black",
					"slug": "inter-black",
					"name": "Inter Black"
				}
			],
			"fontSizes": [
				{
					"name": "Hero",
					"size": "96px",
					"slug": "hero"
				},
				{
					"name": "Hero Mobile",
					"size": "74px",
					"slug": "hero-mobile"
				},
				{
					"name": "Section Header",
					"size": "42px",
					"slug": "section-header"
				},
				{
					"name": "Section Header Mobile",
					"size": "36px",
					"slug": "section-header-mobile"
				},
				{
					"name": "Section Content",
					"size": "24px",
					"slug": "section-content"
				},
				{
					"name": "Base",
					"size": "18px",
					"slug": "base"
				}
			],
			"fontStyle": false,
			"fontWeight": false,
			"letterSpacing": true,
			"lineHeight": false,
			"textDecoration": false,
			"textTransform": true
		},
		"blocks": {
			"core/paragraph": {
				"typography": {
					"fontSizes": [
						{
							"name": "Base",
							"size": "18px",
							"slug": "base"
						}
					]
				}
			},

			"core/button": {
				"border": {
					"customRadius": false
				}
			}
		}
	},
	"styles": {
		"color": {
			"text": "var(--wp--preset--color--secondary)",
			"background": "var(--wp--preset--color--primary)"
		},
		"typography": {
			"fontSize": "var(--wp--preset--font-size--base)",
			"fontFamily": "var(--wp--preset--font-family--inter)"
		},
		"elements": {
			"link": {
				"color": {
					"text": "var(--wp--preset--color--tertiary)"
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--base)"
				}
			},
			"h1": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--hero)"
				}
			},
			"h2": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--section-header)"
				}
			}
		},
		"blocks": {
			"core/heading": {
				"color": {
					"text": "var(--wp--preset--color--secondary)"
				},
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--inter-black)"
				}
			},
			"core/paragraph": {
				"color": {
					"text": "var(--wp--preset--color--secondary)"
				}
			},
			"core/list": {
				"color": {
					"text": "var(--wp--preset--color--secondary)"
				}
			},
			"core/button": {
				"color": {
					"background": "var(--wp--preset--color--secondary)",
					"text": "var(--wp--preset--color--primary)"
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--base)",
					"fontFamily": "var(--wp--preset--font-family--inter)"
				}
			},
			"core/group": {
				"spacing": {
					"padding": {
						"top": "0px",
						"right": "0px",
						"bottom": "0px",
						"left": "0px"
					}
				}
			}
		}
	},
	"customTemplates": [
		{
            "name": "about-template",
            "title": "The About Template",
            "postTypes": [
                "page"
            ]
        }
	],
	"templateParts": [
		{
			"name": "catalina-header",
			"title": "Header",
			"area": "header"
		},
		{
			"name": "catalina-footer",
			"title": "Footer",
			"area": "footer"
		}
	],
	"patterns": [ "hero", "cards", "page-hero", "headline-with-cards" ]
}